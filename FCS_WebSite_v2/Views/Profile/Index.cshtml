@using Microsoft.AspNetCore.Identity
@using FCS_WebSite_v2.Data.Models;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "Profile";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
</head>
<body>
    @{
        var user = await UserManager.GetUserAsync(User);
        var role = await UserManager.GetRolesAsync(user);
    }
    @if (role.First() == "Teacher")
    {
        <div class="container">
            <div class="row" style="margin-top: 5%;">
                <div class="col border border-1">
                </div>
                <div class="col border border-1 justify-content-center text-center">
                    @using (Html.BeginForm("MyForms", "Profile", FormMethod.Get))
                    {
                        <button class="btn btn-primary" style="margin-bottom: 20px">
                            Мои формы
                        </button>
                    }
                    @using (Html.BeginForm("Edit", "Form", FormMethod.Post))
                    {
                        <button class="btn btn-primary" style="margin-bottom: 20px">
                            Создать форму
                        </button>
                    }
                </div>
                <div class="col border border-1">
                </div>
            </div>
        </div>
    }
    else if (role.First() == "Pupil")
    {
        <div class="container" style="margin-top: 5%;">
            @foreach(var form in Model) {
                <div class="row">
                    <div class="col border border-1">
                        @form.EventId
                    </div>
                    <div class="col border border-1 justify-content-center text-center">
                        @form.Name
                    </div>
                    <div class="col border border-1">
                         @using (Html.BeginForm("Fill", "Form", new {formId = form.Id}, FormMethod.Post)) {
                             <button class="btn btn-primary">
                                 Заполнить
                             </button>
                         }
                    </div>
                </div>
            }
        </div>
    }





